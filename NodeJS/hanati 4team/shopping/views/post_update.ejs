<!doctype html>
<html>

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Untitled Document</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">

    <script src="/alert/alertify.min.js"></script>

<!--    <link rel="stylesheet" href="/alert/alertify.core.css"/>-->


    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
    <!-- Custom styles for this template -->
    <link href="http://bootstrapk.com/examples/dashboard/dashboard.css" rel="stylesheet">
    
    <script>
        $(document).ready(function(){
    
    $("#alert").on( 'click', function () {
     alertify.alert("수정되었습니다.");
    });
    
    </script>
	<script src="https://code.jquery.com/jquery-3.2.1.js"></script>
	<script>
		$(document).ready(function(){
			$('#update').on('click',function(){
				if($('#title').val().length < 2 || $('#title').val().length >= 40) {
					alert('제목은 2자 ~ 40자 이내로 작성해 주세요');
					return;
				}
				else if($('#contents').val().length < 10 || $('#contents').val().length >= 3000) {
					alert('내용은 10자 ~ 3000자 이내로 작성해 주세요');
					return;
				}
				else
					$('#updateForm').submit();
			});
		});
	</script>
</head>

<body>

    <div class='container'>
          <div class="jumbotron text-center">
                <h3 class="glyphicon glyphicon-pencil">리뷰수정</h3>
            </div>

        <form method="post" action="/process/modifypost" id="updateForm">
         
                    <div >
                        <div >

                            <div class="form-group">
                                <label for="exampleInputEmail1">제목수정</label>
                                <input type="text" class="form-control" name="title" value="<%=title%>" id="title">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputEmail1">내용수정</label>

                                <textarea class="form-control" name="contents"  id="contents"><%=contents%></textarea>
                            </div>


                        </div>

                    </div>
                
            
            <div>

            <br><br>
            <a class="btn btn-info glyphicon glyphicon-th-list" href='/process/listpost?page=0&perPage=3'>목록</a>
            

            
            <button id="update" type="button" class="btn btn-info glyphicon glyphicon-pencil">수정</button>

            <button type="button" class="btn btn-info glyphicon glyphicon-remove" onclick="location.href='/process/listpost?page=0&perPage=3'">취소</button>
            <input type="hidden" name="idx" value="<%=idx%>">
            </div>

        </form>
    </div>

</body>

</html>
